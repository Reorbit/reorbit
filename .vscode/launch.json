{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug reorbit-core Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "${relativeFile}",
        "--config",
        "${workspaceRoot}/packages/core/jest.config.js",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ]
}
